<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <%= stylesheet_link_tag :email %>
  </head>
  <body>
    <div class="layout-wrapper">
      <div class="mail-wrapper">
        <% if content_for?(:teaser) %>
          <div class="teaser">
            <div class="left">
              <%= content_for(:teaser) %>
            </div>
            <div class="right">
              <%= link_to t(".go_to_site"), root_url, target: "_blank" %>
            </div>
          </div>
        <% end %>
        <div class="header">
          <%= link_to root_url, target: "_blank" do %>
            <%= image_tag("/email_header.png", alt: "Where2Help") %>
          <% end %>
        </div>
        <div class="main">
          <%= yield %>
          <p>
            <%= t(".signature") %><br/>
            <%= mail_to "contact@where2help.wien" %>
          </p>
        </div>
        <hr>
        <div class="footer">
          <% if content_for?(:footer) %>
            <%= content_for(:footer) %>
          <% end %>
          <p>
            Where2Help - <%= link_to "www.where2help.wien", root_url, target: "_blank" %> - DVR 1070053
          </p>
        </div>
      </div>
    </div>
  </body>
</html>
